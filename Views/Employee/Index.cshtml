@model List< VCSSYSTEMS.Models.Domain.Employee >
@{
}
<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Date Of Birth</th>
            <th>Gender</th>
            <th>Qualification</th>
            <th>Image</th>
            <th>Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.ID </td>
                <td>@employee.Name </td>
                <td>@employee.Email </td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy") </td>
                <td>@employee.Gender </td>
                <td>@employee.Qualification </td>
                <td>
                <td>
                    <img src="@Url.Content("~/images/" + employee.ImagePath)" width="100" height="100">
                </td>

                <td><a href="Employee/View/@employee.ID">View</a> </td>
                <td>
                    <form asp-action="Delete" asp-controller="Employee" method="post">
                        <input type="hidden" name="ID" value="@employee.ID" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>